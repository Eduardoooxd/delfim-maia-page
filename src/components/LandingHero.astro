---
import { getLangFromUrl } from "@/i18n/utils";
import HeroBackgroundImage from "@/images/hero-image.png";
import LogoImage from "@/images/logo.svg";
import { Image } from "astro:assets";
import LanguagePicker from "./LanguagePickerHero.astro";

const lang = getLangFromUrl(Astro.url);
---

<section
  class="min-h-d-screen p-8 sm:p-20 grid grid-cols-2 grid-rows-2 relative"
>
  <Image
    class="absolute -z-10 inset-0 min-h-full w-full"
    src={HeroBackgroundImage}
    alt="Background image of landing hero hero"
  />
  <LanguagePicker />
  <Image
    width={300}
    height={234}
    src={LogoImage}
    alt={`${lang === "pt" ? "Logo de Delfim Maia" : "Logo of Delfim Maia"}`}
  />
  <div></div>
  <div class="hidden sm:block"></div>
  <section
    class="flex justify-end items-end col-span-2 sm:col-span-1 text-white"
  >
    {
      lang === "pt" ? (
        <p class="text-right text-balance text-2xl sm:text-3xl w-full max-w-xl">
          Mais de 40 anos <br /> a estudar o direito, <br /> a lutar pela
          justiça <br class="hidden sm:block" /> e criar relações de confiança!
        </p>
      ) : (
        <p class="text-right text-balance text-2xl sm:text-3xl w-full max-w-xl">
          More than 40 years <br /> studying law, <br /> fighting for justice,
          <br class="hidden sm:block" /> and building trusting relationships!
        </p>
      )
    }
  </section>
</section>
