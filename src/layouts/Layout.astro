---
import Footer from "@/components/Layout/Footer.astro";
import Navbar from "@/components/Layout/Navbar";
import { getLangFromUrl } from "@/i18n/utils";
import "@/styles/globals.css";
import "@fontsource-variable/montserrat";

type Props = {
  title?: string;
  revealNavbarOnScroll?: boolean;
};

const lang = getLangFromUrl(Astro.url);
const { title: rawTitle, revealNavbarOnScroll } = Astro.props;

const title = rawTitle ? `${rawTitle} | Delfim Maia` : "Delfim Maia";
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Escritório de advocacia com mais de 40 anos de história, fundado por Dr. J. Delfim Maia em 1980. Equipe multifacetada com vasta experiência em diversas áreas do Direito, pautada por valores de independência profissional, integridade, qualidade do serviço, competência técnica, combatividade, audácia e dedicação. Complementaridade e parcerias estratégicas para oferecer soluções abrangentes aos clientes. Espírito de equipe, colaboração e busca constante pela melhor resposta às solicitações."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="h-full relative bg-white">
    <Navbar client:load language={lang} revealNavbar={revealNavbarOnScroll} />
    <slot />
    <Footer />
  </body>
</html>
